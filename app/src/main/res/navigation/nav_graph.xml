<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/activeFragment">
    <fragment
        android:id="@+id/activeFragment"
        android:name="com.todoapp.ActiveFragment"
        android:label="fragment_active"
        tools:layout="@layout/fragment_active" >
        <action
            android:id="@+id/action_activeFragment_to_pendingEventsFragment"
            app:destination="@id/pendingEventsFragment"
            app:launchSingleTop="false" />
    </fragment>
    <fragment
        android:id="@+id/allEventsFragment"
        android:name="com.todoapp.AllEventsFragment"
        android:label="fragment_all_events"
        tools:layout="@layout/fragment_all_events" />
    <fragment
        android:id="@+id/finishEventsFragment"
        android:name="com.todoapp.CompletedEventsFragment"
        android:label="fragment_finish_events"
        tools:layout="@layout/fragment_finish_events" />
    <fragment
        android:id="@+id/pendingEventsFragment"
        android:name="com.todoapp.CancelEventsFragment"
        android:label="fragment_pending_events"
        tools:layout="@layout/fragment_cancel_events" />
</navigation>